grammar ui.Languagedsl with org.eclipse.xtext.common.Terminals

generate languagedsl "http://www.Languagedsl.ui"

Title:
	'title' name=ID form+=Form*
	
	;

Form:
	'form' name=ID (param+=Parameter*) '{' layout+=Layout '}'
;

Parameter:
	name=ID '(' ')'
;

Layout:
	{Layout} ('row' | 'column') '{' component+=Component* '}'
;

Component:
	layout+=Layout | {Component} element+=Element
;

Element:
	label+=Label | input+=Input | button+=Button
;

Button:
	'button' (save=Save)? name=ID ':' exp=Exp
;

Save:
	'*'
;

Input:
	'input' name=ID ':' (exp=Exp condition=Condition? | ref=[Reference] '==' exp=Exp )
;


Reference:
	Input | Button
;

Condition:
	op=('>'|'<'|'<='|'>='|'=='|'!=') exp=Exp 
	('&&' type=Type op2=('>'|'<'|'<='|'>='|'=='|'!=') exp2=Exp)?
;

Label:
	'label' ':' exp=Exp
;

Exp:
	value=STRING |
	type=Type |
	number=INT |
	TextExp
;

TextExp:
	'#' exp=Exp
;



Type:
	'string' | 'boolean' | 'number'
;
	
